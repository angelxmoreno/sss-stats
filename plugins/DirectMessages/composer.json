{
    "name": "your-name-here/direct-messages",
    "description": "DirectMessages plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "4.4.*",
        "muffin/trash": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "DirectMessages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DirectMessages\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
