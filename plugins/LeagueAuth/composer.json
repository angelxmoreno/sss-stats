{
    "name": "your-name-here/league-auth",
    "description": "LeagueAuth plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "4.4.*",
        "league/oauth2-client": "^2.6",
        "cakephp/authentication": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "LeagueAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LeagueAuth\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
